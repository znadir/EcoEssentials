generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model user {
  id            String    @id @unique @default(cuid())
  firstName     String
  name          String
  email         String    @unique
  passwordHash  String
  receiveEmails Boolean
}

model article {
  id          String   @id @unique @default(cuid())
  slug        String   @unique
  title       String
  description String
  price       Int
  images      String[]
  reviews     review[]
  categories  String[]
}

model review {
  id        String   @id @unique @default(cuid())
  comment   String
  stars     Int
  article   article? @relation(fields: [articleId], references: [id])
  articleId String?
}
