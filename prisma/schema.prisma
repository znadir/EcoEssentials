generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model user {
  id             String         @id @unique @default(cuid())
  first_name     String
  name           String
  email          String         @unique
  password_hash  String
  receive_emails Boolean
  cart           cart_article[]
}

model article {
  id           String         @id @unique @default(cuid())
  title        String
  description  String
  price        Int
  images       Bytes[]
  reviews      review[]
  cart_article cart_article[]
}

model review {
  id        String   @id @unique @default(cuid())
  comment   String
  stars     Int
  article   article? @relation(fields: [articleId], references: [id])
  articleId String?
}

model cart_article {
  id         String   @id @unique @default(cuid())
  article_id article? @relation(fields: [articleId], references: [id])
  user       user?    @relation(fields: [userId], references: [id])
  userId     String?
  articleId  String?
}